<Window x:Class="WpfApp_classwork2712.AddRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_classwork2712"
        mc:Ignorable="d"
        Title="AddRole" Height="118" Width="300">
    <Grid Height="85" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="55*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="RoleNameTxtBox" HorizontalAlignment="Left" Height="23" Margin="10" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="3"/>
        <Button x:Name="AddNewRoleBtn" Content="Add" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="90" Grid.Row="1" Height="22" Click="AddNewRoleBtn_Click"/>
        <Button x:Name="CancelAddRoleBtn" Content="Cancel" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="90" Grid.Row="1" Height="22" Grid.Column="2" Click="CancelAddRoleBtn_Click"/>

    </Grid>
</Window>
